<%= form_with model: post do |form| %>

<h3>Written by <%= post.user.username %></h3>
<div>
	<%= form.label :title %>
	<br>
	<%= form.text_field :title %>
	<% @post.errors.full_messages_for(:title).each do |message| %>
	<div><%= message %></div>
	<% end %>
</div>

<div>
	<%= form.label :body %>
	<br>
	<%= form.text_area :body %>
	<% @post.errors.full_messages_for(:body).each do |message| %>
	<div><%= message %></div>
	<% end %>
</div>

<div>
	<%= form.submit %>
</div>
<% end %>